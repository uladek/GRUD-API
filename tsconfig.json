{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    // "rootDir": "./src",
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [ "ESNext" ],
    "moduleResolution": "Node",
    "noImplicitAny": true,

    "outDir": "./build",                                   /* Specify an output folder for all emitted files. */

    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "ts-node": {
    "moduleTypes": {
      "*": "cjs"
    }
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ]
}
